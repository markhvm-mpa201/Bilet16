@model List<Category>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Category</a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>
                <td>@category.IsDeleted</td>
                <td>
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Update</a>
                    <form method="post" asp-action="Delete" asp-route-id="@category.Id"
                          style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
